{
  "name": "collabcut",
  "version": "1.0.0",
  "description": "Real-time collaborative video editing platform",
  "main": "dist/main/main/src/main.js",
  "scripts": {
    "electron-dev": "npm run build:main && concurrently \"npm run react-dev\" \"wait-on http://localhost:3000 && electron .\"",
    "react-dev": "cd renderer && npm start",
    "electron": "electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "cd renderer && npm run build",
    "build:main": "tsc -p tsconfig.main.json",
    "cli:test": "ts-node bin/simple-cli.ts",
    "cli:project": "ts-node bin/collabcut-cli.ts",
    "cli:media": "ts-node bin/media-cli.ts",
    "cli:timeline": "ts-node bin/timeline-cli.ts",
    "test": "jest --testPathPattern=tests/main",
    "test:renderer": "cd renderer && npm test",
    "test:e2e": "npx playwright test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "react",
    "video-editing",
    "collaboration",
    "real-time"
  ],
  "author": "CollabCut Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/express": "^4.17.0",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.0",
    "@types/multer": "^1.4.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.0",
    "@ffmpeg/util": "^0.12.0",
    "commander": "^11.1.0",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^1.5.0",
    "express": "^4.18.0",
    "inquirer": "^9.3.7",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6",
    "supertest": "^7.1.4",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  }
}
